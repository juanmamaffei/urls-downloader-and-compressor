%h1 Listing petitions

%table
  %thead
    %tr
      %th Zip url
      %th Status
      %th
      %th
      %th

  %tbody
    - @petitions.each do |petition|
      %tr
        %td= petition.zip_file.url
        %td= petition.status
        %td= link_to 'Show', petition
        %td= link_to 'Edit', edit_petition_path(petition)
        %td= link_to 'Destroy', petition, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Petition', new_petition_path
